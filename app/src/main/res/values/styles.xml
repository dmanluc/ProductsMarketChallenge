<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AccentButton" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/background_accent_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AccentRoundButton" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/background_accent_button_rounded</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AccentBackground" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="PrimaryDarkBackground" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
